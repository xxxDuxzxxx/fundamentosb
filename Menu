#include <iostream>

using namespace std;

int main()
{
    int a,b,r,opcion;
    do{
        
        cout<<"ingresar a: "<<endl;cin>>a;
        cout<<"ingresar b: "<<endl;cin>>b;
        
        cout<<"opcion:  "<<opcion<<endl;
        cout<<"   ----Menu-----   "<<endl;
        cout<<"1.suma  "<<endl;
        cout<<"2.resta  "<<endl;
        cout<<"3.multiplicacion  "<<endl;
        cout<<"4.division  "<<endl;
        cout<<"0.salir  "<<endl;
        cout<<"---------------------"<<endl;
        
        cout<<"opcion:  "<<;cin>>opcion;
        
        switch(opcion){
        case 1: a+b;break;
        case 2: a-b;break;
        case 3: a*b;break;
        case 4: a/b;break;
        case 0: cout<<"te has hido de mi calculadora xd"<<endl;
        default:cout<<"opcion invalida"<<endl;
        }
        if((opcion>=1) &&(opcion<=4)){
        cout<<"tu resultado es "<<r<<endl;}
    }
        while(opcion != 0);

    return 0;
}
